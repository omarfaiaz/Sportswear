<!-- FAQ Starts -->
<section id="faq" class="py-10">
    <div class="container mx-auto px-3 xl:px-0">
      <div
        class="faq-content grid grid-cols-1 lg:grid-cols-2 gap-16 md:flex-row"
      >
        <div
          class="faq-left px-14 py-16 bg-cover bg-left bg-no-repeat relative z-10 before:absolute before:top-0 before:-z-10 before:left-0 before:w-full before:h-full before:bg-gradient-to-b before:from-gray-300 to-transparent"
          style="background-image: url('{{ section.settings.faq-bg |  image_url }}')"
        >
          <h3>{{ section.settings.left-heading }}</h3>
          <p class="pt-12 pb-3">
            {{ section.settings.left-para }}
          </p>
          <h4>
            <a href="#" class="btn-link"
              >Explore More <i class="fa-solid fa-arrow-right-long"></i
            ></a>
          </h4>
        </div>
        <div class="faq-right">
          <h3>{{ section.settings.right-heading }}</h3>
          <div class="faq-items-wrapper pt-20">

          {% for item in section.blocks %}
            <div
              class="faq-item border-b border-b-gray-400 py-10"
              data-toggle="open"
            >
              <div
                class="faq-item_que cursor-pointer flex justify-between w-full"
              >
                <h4>{{ item.settings.faq-question }}</h4>
                <i class="fa-solid fa-plus"></i>
              </div>
              <div class="faq-item_ans mt-10">
                <p>
                  {{ item.settings.faq-ans }}
                </p>
              </div>
            </div>
          {% endfor %}

            

            
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- FAQ Ends -->


  {% schema %}
    {
        "name":"FAQ",
        "settings": [
            {
                "type": "image_picker",
                "id": "faq-bg",
                "label": "Add FAQ background"
            },
            {
                "type": "text",
                "id": "left-heading",
                "label": "Add heading for the left column",
                "default": "REACH THE PEAK"
            },
            {
                "type": "textarea",
                "id": "left-para",
                "label": "Add text for the left column",
                "default": "Discover the perfect gear to elevate your performance."
            },
            {
                "type": "text",
                "id": "right-heading",
                "label": "Add heading for the right column",
                "default": "Questions"
            }
        ],
        "blocks": [
            {
                "name": "FAQ Items",
                "type": "faq-items",
                "settings": [
                    {
                        "type": "text",
                        "id": "faq-question",
                        "label": "Add FAQ Question",
                        "default": "FAQ Question"
                    },
                    {
                        "type": "textarea",
                        "id": "faq-ans",
                        "label": "Add FAQ Answer",
                        "default": "FAQ Answer"
                    
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "FAQ"
            }
        ]
    }
  {% endschema %}